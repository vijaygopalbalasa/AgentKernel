{
  "name": "agent-os",
  "version": "0.1.0",
  "private": true,
  "description": "Android for AI Agents â€” an operating system for autonomous AI agents",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vijaygopalbalasa/AgentOS.git"
  },
  "homepage": "https://github.com/vijaygopalbalasa/AgentOS#readme",
  "bugs": {
    "url": "https://github.com/vijaygopalbalasa/AgentOS/issues"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:integration": "pnpm --filter @agent-os/gateway test:integration",
    "test:chaos": "pnpm --filter @agent-os/gateway run vitest run --config vitest.chaos.config.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "dev": "pnpm --filter @agent-os/gateway dev",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "docker:test": "docker compose -f docker/docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f docker/docker-compose.test.yml down",
    "verify": "tsx scripts/verify-install.ts"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
